<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/blue_50"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="@string/app_name" />

        <!-- Message dynamique -->
        <TextView
            android:id="@+id/txtHi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_hi_placeholder"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- Séparateur vertical -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <!-- Bouton Informations -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUserInfo"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_user_info"
            app:icon="@drawable/ic_person"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            android:layout_marginBottom="12dp" />

        <!-- Bouton Vaccination -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVaccines"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_vaccines"
            app:icon="@drawable/ic_vaccines"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            android:layout_marginBottom="12dp" />

        <!-- Bouton Paramètres -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_settings"
            app:icon="@drawable/ic_settings"
            app:iconPadding="8dp"
            app:iconGravity="textStart"
            android:layout_marginBottom="12dp" />

        <!-- Bouton Assistant Santé -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnChat"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_btn_chat"
            app:icon="@drawable/ic_smart_toy"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
